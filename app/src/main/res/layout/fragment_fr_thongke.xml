<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_NhanVien.fr_thongke">

    <!-- TODO: Update blank fragment layout -->
        <LinearLayout
            android:id="@+id/linearLayout8"
            android:layout_width="402dp"
            android:layout_height="748dp"
            android:layout_marginStart="1dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="1dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Thống kê doanh thu theo mặt hàng"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="23dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mã mặt hàng"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btnxemkq"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#2DB6D8"
                android:text="Xem Kết Quả" />

            <TextView
                android:id="@+id/textView19"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kết quả"
                android:textColor="#2E0202"
                android:textSize="20sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/txtketqua"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#0B1C5C"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView21"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoText="false"
                android:text="Chi tiết bán"
                android:textColor="#780707"
                android:textSize="20sp" />

            <com.github.mikephil.charting.charts.PieChart
                android:layout_gravity="center"
                android:id="@+id/barChart"
                android:layout_width="353dp"
                android:layout_height="252dp"
                android:layout_marginBottom="20dp" />

            <ListView
                android:id="@+id/lsv"
                android:layout_width="388dp"
                android:layout_height="211dp" />
        </LinearLayout>
</FrameLayout>