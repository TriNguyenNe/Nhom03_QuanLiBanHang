<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="404dp"
    android:layout_height="785dp"
    android:fitsSystemWindows="true"
    tools:context=".Activity_KhachHang.GioHangKhachHang">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:id="@+id/scl"
        android:background="#2CF6EAB1"
        android:layout_width="404dp"
        android:layout_height="785dp"
        android:orientation="vertical"
       >
        <TextView
            android:textSize="30dp"
            android:textAlignment="center"
            android:textColor="#E40202"
            android:layout_margin="10dp"
            android:textStyle="bold"
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Giỏ Hàng Của Bạn" />

        <TextView
            android:id="@+id/txtNgayDat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Ngày Hiện tại"
            android:textColor="#0B2BDF"
            android:textSize="16sp"
            android:textStyle="bold|italic" />

        <EditText
            android:layout_margin="5dp"
            android:id="@+id/editTextDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="date"
            android:minHeight="48dp"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/txtNgayGiaoDuKien"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Ngày mong muốn được giao"
            android:textColor="#0B2BDF"
            android:textSize="16sp"
            android:textStyle="bold|italic" />

        <EditText
            android:layout_margin="5dp"
            android:id="@+id/editTextDate2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="date"
            android:minHeight="48dp"
            tools:ignore="SpeakableTextPresentCheck"/>

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Danh sách sản phẩm đã đặt"
            android:textColor="#0B2BDF"
            android:textSize="16sp"
            android:textStyle="bold|italic" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/lsdsgiohang"
            android:layout_width="match_parent"
            android:layout_height="311dp"
            android:layout_marginStart="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="1dp" />
        <LinearLayout
            android:layout_marginTop="30dp"
            android:background="#F4E095"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_margin="10dp"
                android:id="@+id/btndathang"
                android:layout_width="106dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:background="#E61300"
                android:text="Mua ngay"
                android:textColor="#FDFDFD"
                android:textStyle="bold|italic" />
            <TextView
                android:text="Tong tien"
                android:id="@+id/lbltongtien"
                android:textStyle="bold|italic"
                android:textColor="#D80000"
                android:textAlignment="center"
                android:textSize="25dp"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:layout_gravity="center"/>

        </LinearLayout>
    </LinearLayout>

</FrameLayout>