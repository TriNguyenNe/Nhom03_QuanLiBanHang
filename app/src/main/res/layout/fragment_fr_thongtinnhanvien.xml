<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_NhanVien.fr_thongtinnhanvien">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        android:orientation="vertical"
        >

        <TextView
            android:textAlignment="center"
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thông tin về bạn"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="#000"/>

        <ImageView
            android:layout_width="120dp"
            android:layout_height="118dp"
            android:layout_gravity="center"
            android:background="@drawable/ic_baseline_account_circle_24" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="548dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >
                <TextView android:layout_width="match_parent"
                    android:layout_margin="10dp"
                    android:layout_height="wrap_content"
                    android:text="Mã nhân viên:"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:textColor="#2F5AF4"/>
                <TextView
                    android:textStyle="bold|italic"

                    android:layout_margin="10dp"
                    android:textColor="#000"
                    android:textSize="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtMaKH"/>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView android:layout_width="match_parent"
                    android:layout_margin="10dp"
                    android:layout_height="wrap_content"
                    android:text="Tên nhân viên:"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:textColor="#2F5AF4"/>
                <TextView
                    android:textStyle="bold|italic"

                    android:layout_margin="10dp"
                    android:textColor="#000"
                    android:textSize="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtTenKH"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >
                <TextView android:layout_width="match_parent"
                    android:layout_margin="10dp"
                    android:layout_height="wrap_content"
                    android:text="Ngày sinh:"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:textColor="#2F5AF4"/>
                <TextView
                    android:textStyle="bold|italic"

                    android:layout_margin="10dp"
                    android:textColor="#000"
                    android:textSize="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtNgaysinh"/>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >
                <TextView android:layout_width="match_parent"
                    android:layout_margin="10dp"
                    android:layout_height="wrap_content"
                    android:text="Giới tính:"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:textColor="#2F5AF4"/>
                <TextView
                    android:textStyle="bold|italic"

                    android:layout_margin="10dp"
                    android:textColor="#000"
                    android:textSize="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtGioITinh"/>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >
                <TextView android:layout_width="match_parent"
                    android:layout_margin="10dp"
                    android:layout_height="wrap_content"
                    android:text="Chức vụ:"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:textColor="#2F5AF4"/>
                <TextView
                    android:textStyle="bold|italic"
                    android:layout_margin="10dp"
                    android:textColor="#000"
                    android:textSize="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtChucvu"/>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >
                <TextView android:layout_width="match_parent"
                    android:layout_margin="10dp"
                    android:layout_height="wrap_content"
                    android:text="Thông tin liên hệ"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:textColor="#2F5AF4"/>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_baseline_location_on_24"/>
                <TextView android:layout_width="200dp"
                    android:layout_margin="10dp"
                    android:id="@+id/txtDiaChi"
                    android:layout_height="wrap_content"
                    android:text="Địa chỉ"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:textColor="#000412"/>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_baseline_add_ic_call_24"/>
                <TextView android:layout_width="match_parent"
                    android:layout_margin="10dp"
                    android:id="@+id/txtsdt"
                    android:layout_height="wrap_content"
                    android:text="Địa chỉ"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:textColor="#000412"/>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_baseline_email_24"/>
                <TextView android:layout_width="match_parent"
                    android:layout_margin="10dp"
                    android:id="@+id/txtemail"
                    android:layout_height="wrap_content"

                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:textColor="#000412"/>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </TableLayout>


    </LinearLayout>

</FrameLayout>